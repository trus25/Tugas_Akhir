<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/hotelpic"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@drawable/img_1"/>

        <TextView
            android:id="@+id/hotelname"
            android:layout_width="382dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotelpic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="24dp"
            android:text="Favehotel Rungkut Surabaya"
            android:textSize="24dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/hotelalamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotelname"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="14dp"
            android:text="Favehotel Rungkut Surabaya"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/hargahotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotelalamat"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="29dp"
            android:text="Rp 100.000,00/kamar"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hargahotel"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="36dp"
            android:text="Pilih Kamar"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hargahotel"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="92dp"
            android:text="Pilih nomor Kamar"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="491dp"
            android:layout_marginEnd="14dp"
            android:background="#FF613F"
            android:text="Bayar"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>