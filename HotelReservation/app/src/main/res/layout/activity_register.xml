<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/loginParent"
    tools:context=".view.login.RegisterActivity">
    <ScrollView
        style="@style/parent">

        <RelativeLayout
            style="@style/parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:weightSum="12">

                <LinearLayout
                    style="@style/parent"
                    android:background="@drawable/login_shape_bk"
                    android:orientation="vertical"
                    android:layout_weight="3">

                    <ImageView
                        style="@style/parent"
                        android:background="@drawable/ic_login_bk"
                        android:contentDescription="login background" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">


                <TextView
                    style="@style/headerText"
                    android:layout_gravity="center"
                    android:text="Smart Hotel"
                    android:layout_marginTop="40dp"/>
                <androidx.cardview.widget.CardView
                    style="@style/loginCard"
                    app:cardCornerRadius="@dimen/loginCardRadius"
                    android:elevation="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:layout_marginBottom="@dimen/loginViewsMargin"
                    android:background="@color/whiteCardColor">



                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="@dimen/loginViewsMargin">

                        <TextView
                            style="@style/headerTextPrimary"
                            android:text="Register"
                            android:layout_marginTop="@dimen/loginViewsMargin"/>

                        <EditText
                            android:id="@+id/rgUsername"
                            style="@style/modifiedEditText"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:hint="Username"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                            android:drawablePadding="5dp"/>


                        <EditText
                            android:id="@+id/rgPassword"
                            style="@style/modifiedEditText"
                            android:hint="@string/login_password_hint"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                            android:drawablePadding="5dp"/>

                        <EditText
                            android:id="@+id/rgPasswordCfrm"
                            style="@style/modifiedEditText"
                            android:hint="Confirm Passowrd"
                            android:maxLines="1"
                            android:inputType="textPassword"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                            android:drawablePadding="5dp"/>

                        <EditText
                            android:id="@+id/rgNama"
                            style="@style/modifiedEditText"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:hint="Nama Lengkap"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                            android:drawablePadding="5dp"/>

                        <EditText
                            android:id="@+id/rgEmail"
                            style="@style/modifiedEditText"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:hint="Email"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:drawableLeft="@drawable/ic_email_black_24dp"
                            android:drawablePadding="5dp"/>


                        <EditText
                            android:id="@+id/rgPhone"
                            style="@style/modifiedEditText"
                            android:hint="Phone Number"
                            android:maxLines="1"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                            android:drawablePadding="5dp"/>


                        <Button
                            android:id="@+id/btnRegister"
                            style="@style/loginButton"
                            android:text="Register"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:drawablePadding="5dp"/>

                        <TextView
                            android:id="@+id/regcancel"
                            android:clickable="true"
                            style="@style/parent"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/primaryTextColor"
                            android:text="Already a member? Sign In"
                            android:layout_marginTop="@dimen/loginViewsMargin"
                            android:drawablePadding="5dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>